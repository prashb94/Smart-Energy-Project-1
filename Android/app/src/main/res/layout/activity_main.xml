<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="ch.ethz.vs.se.team7.carbonfootprintmonitor.MainActivity">

    <LinearLayout
        android:id="@+id/actionbar_main"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome_user"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            style="@style/title_style" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_layout_main"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/actionbar_main">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/table_text_0_0"
                style="@style/table_text_view"
                android:text="@string/legend_transport"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/table_text_0_1"
                style="@style/table_text_view"
                android:text="@string/legend_time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/table_text_0_2"
                style="@style/table_text_view"
                android:text="@string/legend_distance"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_walk"
                style="@style/table_icon_view"
                app:srcCompat="@mipmap/ic_walk" />

            <TextView
                android:id="@+id/table_text_1_1"
                style="@style/table_text_view"
                android:text="2h30min" />

            <TextView
                android:id="@+id/table_text_1_2"
                style="@style/table_text_view"
                android:text="5.7km" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_bike"
                style="@style/table_icon_view"
                app:srcCompat="@mipmap/ic_bike" />

            <TextView
                android:id="@+id/table_text_2_1"
                style="@style/table_text_view"
                android:text="0h 30min" />

            <TextView
                android:id="@+id/table_text_2_2"
                style="@style/table_text_view"
                android:text="4km" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_car"
                style="@style/table_icon_view"
                app:srcCompat="@mipmap/ic_car" />

            <TextView
                android:id="@+id/table_text_3_1"
                style="@style/table_text_view"
                android:text="0h 59min" />

            <TextView
                android:id="@+id/table_text_3_2"
                style="@style/table_text_view"
                android:text="33km" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_tram"
                style="@style/table_icon_view"
                app:srcCompat="@mipmap/ic_tram" />

            <TextView
                android:id="@+id/table_text_4_1"
                style="@style/table_text_view"
                android:text="1h 24min" />

            <TextView
                android:id="@+id/table_text_4_2"
                style="@style/table_text_view"
                android:text="19.4km" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/debug_layout"
        android:layout_below="@id/table_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/fab_linear_layout" >

        <TextView
            android:id="@+id/textView_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Debugging options" />

        <TextView
            android:id="@+id/textView_speed_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_debug"
            android:text="Current Speed: " />

        <TextView
            android:id="@+id/textView_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_debug"
            android:layout_toRightOf="@id/textView_speed_capture"
            android:text="@string/speed" />


        <TextView
            android:id="@+id/textView_location_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_speed_capture"
            android:text="Current Location: " />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_speed_capture"
            android:layout_toRightOf="@+id/textView_location_capture"
            android:text="@string/location" />
        <TextView
            android:id="@+id/textViewDetectedActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_location"
            android:text="(Detected Activity)" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fab_linear_layout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/table_layout_main"
        android:gravity="center"
        android:orientation="horizontal">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_toggle_energy"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:baselineAlignBottom="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/world_leaf_eco"
            app:fabSize="normal" />
    </LinearLayout>

</RelativeLayout>
